img_creation_func() {
		if [ -z "/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.ext4" ]; then
		bberror "SDCARD_ROOTFS is undefined. To use sdcard image from Freescale's BSP it needs to be defined."
		exit 1
	fi

	# Align boot partition and calculate total SD card image size
	BOOT_SPACE_ALIGNED=$(expr 8192 + 4096 - 1)
	BOOT_SPACE_ALIGNED=$(expr ${BOOT_SPACE_ALIGNED} - ${BOOT_SPACE_ALIGNED} % 4096)
	SDCARD_SIZE=$(expr 4096 + ${BOOT_SPACE_ALIGNED} + $ROOTFS_SIZE + 4096)

	# Initialize a sparse file
	dd if=/dev/zero of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard bs=1 count=0 seek=$(expr 1024 \* ${SDCARD_SIZE})

	generate_imx_sdcard

	cd /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard
	gzip -f -9 -c core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard > core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard.gz
	rm core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard
}

bberror() {
	if [ -p /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/temp/fifo.29445 ] ; then
		printf "%b\0" "bberror $*" > /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/temp/fifo.29445
	else
		echo "ERROR: $*"
	fi

}

generate_imx_sdcard() {
	# Create partition table
	parted -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard mklabel msdos
	parted -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard unit KiB mkpart primary fat32 4096 $(expr 4096 \+ ${BOOT_SPACE_ALIGNED})
	parted -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard unit KiB mkpart primary $(expr  4096 \+ ${BOOT_SPACE_ALIGNED}) $(expr 4096 \+ ${BOOT_SPACE_ALIGNED} \+ $ROOTFS_SIZE)
	parted /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard print

	# Burn bootloader
	case "u-boot" in
		imx-bootlets)
		bberror "The imx-bootlets is not supported for i.MX based machines"
		exit 1
		;;
		u-boot)
		if [ -n "SPL" ]; then
			dd if=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/SPL of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc seek=2 bs=512
			dd if=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/u-boot-wandboard.img of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc seek=69 bs=1K
		else
			dd if=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/u-boot-wandboard.img of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc seek=2 bs=512
		fi
		;;
		barebox)
		dd if=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/barebox-wandboard.bin of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc seek=1 skip=1 bs=512
		dd if=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/bareboxenv-wandboard.bin of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc seek=1 bs=512k
		;;
		"")
		;;
		*)
		bberror "Unknown IMAGE_BOOTLOADER value"
		exit 1
		;;
	esac

	_generate_boot_image 1

	# Burn Partition
	dd if=/home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/boot.img of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc,fsync seek=1 bs=$(expr 4096 \* 1024)
	dd if=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.ext4 of=/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard conv=notrunc,fsync seek=1 bs=$(expr ${BOOT_SPACE_ALIGNED} \* 1024 + 4096 \* 1024)

}

_generate_boot_image() {
	local boot_part=$1

	# Create boot partition image
	BOOT_BLOCKS=$(LC_ALL=C parted -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/core-image-wvsnp-minimal-wandboard-20160914211511.rootfs.sdcard unit b print \
	                  | awk "/ $boot_part / { print substr(\$4, 1, length(\$4 -1)) / 1024 }")

	# mkdosfs will sometimes use FAT16 when it is not appropriate,
	# resulting in a boot failure from SYSLINUX. Use FAT32 for
	# images larger than 512MB, otherwise let mkdosfs decide.
	if [ $(expr $BOOT_BLOCKS / 1024) -gt 512 ]; then
		FATSIZE="-F 32"
	fi

	rm -f /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/boot.img
	mkfs.vfat -n "Boot wandboard" -S 512 ${FATSIZE} -C /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/boot.img $BOOT_BLOCKS

	mcopy -i /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/boot.img -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/zImage-wandboard.bin ::/zImage

	# Copy boot scripts
	for item in ${BOOT_SCRIPTS}; do
		src=`echo $item | awk -F':' '{ print $1 }'`
		dst=`echo $item | awk -F':' '{ print $2 }'`

		mcopy -i /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/boot.img -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/$src ::/$dst
	done

	# Copy device tree file
	if test -n "imx6q-wandboard.dtb imx6dl-wandboard.dtb"; then
		for DTS_FILE in imx6q-wandboard.dtb imx6dl-wandboard.dtb; do
			DTS_BASE_NAME=`basename ${DTS_FILE} | awk -F "." '{print $1}'`
			if [ -e "/home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/zImage-${DTS_BASE_NAME}.dtb" ]; then
				kernel_bin="`readlink /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/zImage-wandboard.bin`"
				kernel_bin_for_dtb="`readlink /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/zImage-${DTS_BASE_NAME}.dtb | sed "s,$DTS_BASE_NAME,wandboard,g;s,\.dtb$,.bin,g"`"
				if [ $kernel_bin = $kernel_bin_for_dtb ]; then
					mcopy -i /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/boot.img -s /home/carl/fsl-community-bsp/build/tmp/deploy/images/wandboard/zImage-${DTS_BASE_NAME}.dtb ::/${DTS_BASE_NAME}.dtb
				fi
			else
				bbfatal "${DTS_FILE} does not exist."
			fi
		done
	fi

}

bbfatal() {
	if [ -p /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/temp/fifo.29445 ] ; then
		printf "%b\0" "bbfatal $*" > /home/carl/fsl-community-bsp/build/tmp/work/wandboard-poky-linux-gnueabi/core-image-wvsnp-minimal/1.0-r0/temp/fifo.29445
	else
		echo "ERROR: $*"
	fi
	exit 1

}

